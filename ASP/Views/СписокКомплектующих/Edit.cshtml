@model ASP.Models.СписокКомплектующих

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Autorize.cshtml";
}

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>СписокКомплектующих</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.КодСписка)

        <div class="form-group">
            @Html.LabelFor(model => model.КодЗаказа, "Заказ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("КодЗаказа", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.КодЗаказа, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.КодКомплектующего, "Комплектующее", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("КодКомплектующего", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.КодКомплектующего, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
